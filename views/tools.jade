extends layout

block content
  .container
    h1.summary Tools
    h5.title Shell Alias
    dl.toolinfo
      dt Simple alias that should work in most shells, only requires cURL. Usage: upload FILE [FILE [FILE...]]
      code upload() { for f; do echo $(curl -#Sf -F "files[]=@$f" #{config.UPLOAD_URL}/upload\?output\=gyazo); done }
    h5.title ShareX Custom Uploader
    dl.toolinfo
      dt Download ShareX
      dd 
        a(href='http://getsharex.com/', target='_blank') http://getsharex.com/
      dt Config
      dd
        a(href='#{config.URL}/tools/sharex', target='_blank') #{config.URL}/tools/sharex
    h5.title Poomf
    dl.toolinfo
      dt A simple bash uploader, can be used in Linux or Mac
      dt Github
      dd
        a(href='https://github.com/maxpowa/poomf', target='_blank') maxpowa/poomf
    h5.title limf
    dl.toolinfo
      dt Pomf.se clone uploader, written in Python
      dt Github
      dd
        a(href='https://github.com/lich/limf', target='_blank') lich/limf
